{% extends "layouts/page.njk" %}

{% from "screenshots/macro.njk" import appScreenshots %}

{% block content %}
  {{ appDocumentHeader({
    title: title | noOrphans
  }) }}

  {% call appProseScope() %}
    {{ content }}

    {% for collection in screenshots %}
      {{ appScreenshots(collection) }}
    {% else %}
      {{ appScreenshots(screenshots) if screenshots }}
    {% endfor %}
  {% endcall %}
{% endblock %}
